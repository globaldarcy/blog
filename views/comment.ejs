<br>
<% post.comments.forEach(function(comment, index){ %>
<p>
    <a href="/u/<%= post.username %>"><img style=" width: 48px; height: 48px;" src="<%= post.head %>" alt="<%= post.username %>" class="img-circle"></a>
    <a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="info">回复于 <%= comment.title %></span>
</p>
<p><%- comment.content %></p>
<% }) %>

<form method="post">
    <% if(user) { %>
    <div class="form-group">
        <label for="inputName">姓名</label>

        <input type="text" value="<%= user.username %>" name="name" class="form-control" id="inputName"
               placeholder="姓名">

    </div>
    <div class="form-group">
        <label for="inputEmail">Email</label>

        <input type="email" value="<%= user.email %>" name="email" class="form-control" id="inputEmail"
               placeholder="Email">

    </div>
    <div class="form-group">
        <label for="inputWebsite">网址</label>

        <input type="text" value="/u/<%= user.username %>" name="website" class="form-control" id="inputWebsite"
               placeholder="网址">

    </div>
    <% } else { %>
    <div class="form-group">
        <label for="inputName">姓名</label>

        <input type="text" name="name" class="form-control" id="inputName" placeholder="姓名">

    </div>
    <div class="form-group">
        <label for="inputEmail">Email</label>

        <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email">

    </div>
    <div class="form-group">
        <label for="inputWebsite">网址</label>

        <input type="text" value="http://" name="website" class="form-control" id="inputWebsite" placeholder="网址">

    </div>
    <% } %>
    <div class="form-group">
        <label for="commentContent">正文</label>
        <textarea class="form-control" required="required" name="content" id="commentContent" placeholder="正文"
                  rows="10"></textarea>
    </div>
    <div class="form-group">
        <p class="text-right">
            <button type="submit" class="btn btn-primary">留言</button>
        </p>
    </div>
</form>