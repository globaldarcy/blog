<%- include nav/header %>
<% posts.map(function (post,index) { %>
<h2><a href="/u/<%= post.username %>/<%= post.date.day %>/<%= post.title %>"><%= post.title %></a></h2>
<p class="info">
    作者：<a href="/u/<%= post.username %>"><%= post.username %></a> | 日前：<span><%= post.date.minute %></span> |
    标签：
    <% post.tags.forEach(function(tag, index){ %>
    <% if (tag) { %>
    <a class="btn btn-primary" role="button" href="/tags/<%= tag %>"><%= tag %> <span class="badge">4</span></a>
    <% } %>
    <% }) %>
</p>
<p><%- post.post %></p>
<% }) %>
<%- include nav/footer %>