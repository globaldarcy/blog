<%- include nav/header %>
<% posts.map(function (post,index) { %>
<% var urlTitle = encodeURIComponent(post.title); %>
<h3><a href="/u/<%= post.username %>/<%= post.date.day %>/<%= urlTitle %>"><%= post.title %></a></h3>
<p class="info">
    作者：<a href="/u/<%= post.username %>"><%= post.username %></a> | 日前：<span><%= post.date.minute %></span> |
    标签：
    <% post.tags.forEach(function(tag, index){ %>
    <% if (tag) { %>
    <a class="label label-info" href="/tags/<%= tag %>"><%= tag %></a>
    <% } %>
    <% }) %>
</p>
<p><%- post.post %></p>
<p>
    阅读：<span class="label label-info"><%= post.pv %></span> |
    评论：<span class="label label-warning"><%- post.comments.length %></span>
</p>
<% }) %>
<%- include paging %>
<%- include nav/footer %>