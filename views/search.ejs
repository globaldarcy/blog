<%- include nav/header %>
<ul class="list-group">
    <% var lastYear = 0 %>
    <% posts.forEach(function (post,index) { %>
        <% var urlTitle = encodeURIComponent(post.title); %>
        <% if(lastYear != post.date.year){ %>
    <li class="list-group-item"><h3><span class="label label-success"><%= post.date.year %></span></h3></li>
            <% lastYear=post.date.year %>
        <% } %>
        <li class="list-group-item bg-success"><span class="label label-primary"><time><%= post.date.minute %></time></span>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/u/<%=post.username %>/<%= post.date.day %>/<%= urlTitle %>"><%= post.title %></a></li>
    <% })%>
</ul>
<%- include nav/footer %>